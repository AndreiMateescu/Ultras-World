            </div>

            <div class="item">
                <img src="~/Content/images/ucv3.jpg" alt="Inaugurare stadion" style="width:100%; height: 720px;">
            </div>

            <div class="item">
                <img src="~/Content/images/borussiadortmund1.jpg" alt="BVB" style="width:100%; height: 720px;">
            </div>

            <div class="item">
                <img src="~/Content/images/borussiadortmund2.jpg" alt="BVB09" style="width:100%; height: 720px;">
            </div>

            <div class="item">
                <img src="~/Content/images/ucv4.jpg" alt="UCV" style="width:100%; height: 720px;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

